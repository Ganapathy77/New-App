{{!-- {{yield}} --}}
<h2>Register</h2>
<form id="registerForm">
    <div class="input-box">
        <span class="icon"><ion-icon name="person"></ion-icon></span>
        <input id="register_username" type="text" required>
        <label>Username</label>
    </div>
    <div class="input-box">
        <span class="icon"><ion-icon name="mail"></ion-icon></span>
        <input id="register_user_email" type="email" required>
        <label>Email</label>
    </div>
    <div class="input-box">
        <span class="icon"><ion-icon name="lock-closed"></ion-icon></span>
        <input id="register_password" type="password" required>
        <label>Password</label>
    </div>
    <div class="remember-forget">
        <label><input type="checkbox" id="reg-checkbox" required>I agree to the terms & conditions</label>
    </div>
    <button type="submit" class="form-btn" {{action 'signupuser'}}>Register</button>
    <div class="login-register">
        <p>Alresdy have an account? <a href="#" class="login-link" {{action 'loginLinkAction'}}>Login</a> </p>
    </div>
</form>