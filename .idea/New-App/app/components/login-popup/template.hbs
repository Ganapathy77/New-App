{{!-- {{yield}} --}}
<h2>Login</h2>
<form id="loginForm">
    <div class="input-box">
        <span class="icon"><ion-icon name="mail"></ion-icon></span>
        <input id="useremail" type="text" required>
        <label>Username / Email </label>
    </div>
    <div class="input-box">
        <span class="icon"><ion-icon name="lock-closed"></ion-icon></span>
        <input id="password" type="password" required>
        <label>Password</label>
    </div>
    <div class="remember-forget">
        <label><input type="checkbox">Show Password</label>
        {{!-- <a href="#">Forget password?</a> --}}
    </div>
    <button class="form-btn" {{action 'loginUsers'}}>Login</button>
    <div class="login-register">
        <p>Don't have an account? <a href="#" class="register-link" {{action 'registerLinkAction'}}>Register</a> </p>
    </div>
</form>